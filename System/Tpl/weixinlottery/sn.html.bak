<include  file='public:header'/>
<div class="pad">
<div class="breadNav">
  <div class="flt breadNav_text"> <span>功能管理</span><i></i><span>微信应用</span><i></i><span>大转盘成员</span> </div>
  <div class="frt breadNav_other">
  <form method="get" action="<{:U('weixinlottery/sn')}>">
        <div class="bn_input">用户名：
          <input type="text" name="name" value="<{$name}>" class="text" style="display:none"> 
		  <input type="text" name="name" value="<{$name}>" class="text">
         
          
          
        </div>
        <div class="bn_input">
          <input type="submit" class="pub_btn" value="搜索">
        </div>
      </form>
    <div class="bn_input theme-pop-btn">
      <div class="bn_input">
        <div class="bn_input"></div>
      </div>
    </div>
    <div class="clear"></div>
  </div>
</div>
<form target="zhuchuang_frm" method="post">
<div class="daemonTable">
  <table class="table_data daemon_data" cellpadding="0" cellspacing="0">
    <tr>
      <th>大转盘</th>
      <th>用户昵称</th>
      <th>sn号</th>
      <th>中奖奖项</th>
      <th>是否使用</th>
      <th>使用时间</th>
      <th>创建时间</th>
      <th>操作</th>
    </tr>
    <foreach name="list" item="var">
      <tr>
        <td><{$detail.title}></td>
        <td><{$var.nickname}></td>
        <td><{$var.sn}></td>
        <td><{$var.prize}></td>
        <td><if condition='$var["is_use"] eq 1'> 已使用
            <else />
            未使用</if></td>
        <td><{$var.use_time|date='Y-m-d H:i:s',###}></td>
        <td><{$var.dateline|date='Y-m-d H:i:s',###}></td>
        <td><{:ROLE('weixinlottery/snedit',array("sn_id"=>$var["sn_id"]),'改变使用状态','act','pub_btn')}>
          <{:ROLE('weixinlottery/sndelete',array("sn_id"=>$var["sn_id"]),'删除','act','pub_btn grayBtn')}> </td>
      </tr>
    </foreach>
  </table>
</div>
<div class="daemonBot">
  <div class="flt daemonBot_cz"> </div>
  <div class="frt daemonPage"> <{$page}> </div>
  <div class="clear"></div>
</div>
</div>
<include  file='public:footer'/> 